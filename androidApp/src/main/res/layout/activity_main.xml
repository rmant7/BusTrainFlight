<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.z8.louttsev.bustrainflightmobile.androidApp.viewmodel.MainViewModel" />
 </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/from_location_input_field_hint"
            app:layout_constraintBottom_toTopOf="@id/origin_input_layout"
            app:layout_constraintStart_toStartOf="@id/origin_input_layout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/origin_input_layout"
            style="@style/InputLocationLayoutStyle"
            android:layout_marginTop="38dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <AutoCompleteTextView
                android:id="@+id/origin_text_view"
                style="@style/InputLocationEditTextStyle"
                tools:text="Muscat" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to_location_input_field_hint"
            app:layout_constraintBottom_toTopOf="@id/destination_input_layout"
            app:layout_constraintStart_toStartOf="@id/destination_input_layout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/destination_input_layout"
            style="@style/InputLocationLayoutStyle"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/origin_input_layout">

            <AutoCompleteTextView
                android:id="@+id/destination_text_view"
                style="@style/InputLocationEditTextStyle"
                tools:text="Abu Dhabi" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clearButton"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/white_button_background"
            app:backgroundTint="@null"
            app:cornerRadius="8dp"
            android:fontFamily="@font/roboto"
            android:text="@string/clear_button_text"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/goButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/destination_input_layout" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/goButton"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:backgroundTint="@null"
            android:background="@drawable/orange_button_background"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/roboto"
            android:text="@string/go_button_text"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/clearButton"
            app:layout_constraintTop_toBottomOf="@+id/destination_input_layout" />

        <TextView
            android:id="@+id/resultsTextView"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="Results"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:visibility="invisible"
            android:textStyle="italic|bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clearButton"/>
        <!--        <ImageView-->
        <!--            android:id="@+id/logo"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="0dp"-->
        <!--            android:layout_marginStart="16dp"-->
        <!--            android:layout_marginTop="16dp"-->
        <!--            android:layout_marginEnd="16dp"-->
        <!--            android:layout_marginBottom="16dp"-->
        <!--            app:layout_constraintBottom_toBottomOf="parent"-->
        <!--            app:layout_constraintDimensionRatio="1"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toBottomOf="@+id/clear_button"-->
        <!--            app:srcCompat="@drawable/logo" />-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/route_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clearButton"
            tools:listitem="@layout/item_route" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>