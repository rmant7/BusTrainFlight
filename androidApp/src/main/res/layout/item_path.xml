<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="ru.z8.louttsev.bustrainflightmobile.androidApp.model.data.DurationConverter" />

        <variable
            name="model"
            type="ru.z8.louttsev.bustrainflightmobile.androidApp.model.data.Path" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/path_main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="7dp"
        android:paddingTop="8dp"
        android:paddingEnd="7dp"
        android:paddingBottom="8dp">

        <View
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"/>

        <TextView
            android:id="@+id/path_plan"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@{model.pathPlan}"
            android:textColor="@color/colorTextPrimary"
            app:layout_constraintEnd_toStartOf="@+id/transport"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Muscat → Abu Dhabi" />

        <TextView
            android:id="@+id/transport"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.transportationType.toString()}"
            android:textColor="@color/colorTextPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Bus" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.pathDuration}"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/euro_price"
            tools:text="1 d 16 h 39 min" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bookingButton"
            style="@style/ActionButtonStyle"
            app:layout_constraintBottom_toBottomOf="@+id/buyTicketButton"
            app:layout_constraintEnd_toStartOf="@+id/buyTicketButton"
            app:layout_constraintTop_toTopOf="@+id/buyTicketButton"
            android:layout_marginEnd="6dp"
            android:text="Booking.com"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buyTicketButton"
            style="@style/ActionButtonStyle"
            android:text="@string/action_button_text"
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/duration"
            tools:visibility="visible"
            android:textStyle="bold"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/hostelworldButton"
            style="@style/ActionButtonStyle"
            app:layout_constraintBottom_toBottomOf="@+id/buyTicketButton"
            app:layout_constraintStart_toEndOf="@+id/buyTicketButton"
            app:layout_constraintTop_toTopOf="@+id/buyTicketButton"
            android:layout_marginStart="6dp"
            android:text="Hostelworld"/>

        <TextView
            android:id="@+id/euro_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="@{`\u2009€ ` + String.valueOf(model.euroPrice) + '0'}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/path_plan"
            tools:text="€ 125.30" />

