<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.travelapp.bustrainflightmobile.androidApp.model.data.DurationConverter" />

        <variable
            name="model"
            type="com.travelapp.bustrainflightmobile.androidApp.model.data.Path" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/path_main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="7dp"
        android:paddingTop="8dp"
        android:paddingEnd="7dp"
        android:paddingBottom="8dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/path_plan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:text="@{model.pathPlan}"
            android:textColor="@color/colorTextPrimary"
            app:layout_constraintEnd_toStartOf="@+id/transport"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Muscat → Abu Dhabi" />

        <TextView
            android:id="@+id/transport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@{model.transportationType.toString()}"
            android:textColor="@color/colorTextPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Bus" />

        <TextView
            android:id="@+id/storeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.pathDuration}"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/actionButton"
            tools:text="1 d 16 h 39 min" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bookingButton"
            style="@style/ActionButtonStyle"
            android:layout_marginEnd="6dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/buyTicketButton"
            app:layout_constraintEnd_toStartOf="@+id/buyTicketButton"
            app:layout_constraintTop_toTopOf="@+id/buyTicketButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:text="Booking.com"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/bookingButton"
            app:layout_constraintEnd_toEndOf="@+id/bookingButton"
            app:layout_constraintStart_toStartOf="@+id/bookingButton"
            app:layout_constraintTop_toTopOf="@+id/bookingButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buyTicketButton"
            style="@style/ActionButtonStyle"
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/storeTextView"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:text="Buy ticket"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/buyTicketButton"
            app:layout_constraintEnd_toEndOf="@+id/buyTicketButton"
            app:layout_constraintStart_toStartOf="@+id/buyTicketButton"
            app:layout_constraintTop_toTopOf="@+id/buyTicketButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/hostelworldButton"
            style="@style/ActionButtonStyle"
            android:layout_marginStart="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/buyTicketButton"
            app:layout_constraintStart_toEndOf="@+id/buyTicketButton"
            app:layout_constraintTop_toTopOf="@+id/buyTicketButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:text="Hostelworld"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/hostelworldButton"
            app:layout_constraintEnd_toEndOf="@+id/hostelworldButton"
            app:layout_constraintStart_toStartOf="@+id/hostelworldButton"
            app:layout_constraintTop_toTopOf="@+id/hostelworldButton" />

        <TextView
            android:id="@+id/actionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{`\u2009€ ` + String.valueOf(model.euroPrice) + '0'}"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/path_plan"
            tools:text="€ 125.30" />

